<h1>Rent a cat, you evil human!</h1>

<form action="<%= cat_rental_requests_url %>" method="post">
  <label for="select_cat">Cats: </label>
  <select id="select_cat" name="cat_rental_request[cat_id]">
    <option disabled selected>--Please select a cat--</option>
    <% @cats.each do |cat| %>
    <% cat_selected = @request.cat_id == cat.id ? "selected" : "" %>
    <option value="<%= cat.id %>" <%= cat_selected %>><%= cat.name %></option>
    <% end %>
  </select>
  <br>
  <label for="start_date">Start Date: </label>
  <input id="start_date" type="date" name="cat_rental_request[start_date]" value="<%=@request.start_date %>">
  <br>
  <label for="end_date">End Date: </label>
  <input id="end_date" type="date" name="cat_rental_request[end_date]" value="<%=@request.end_date %>">
  <br>
  <input type="submit" value="Rent Your Cat!">
</form>
